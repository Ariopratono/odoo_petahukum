<odoo>
  <!-- Cron harian untuk sinkronisasi otomatis -->
  <record id="ir_cron_sync_consolidation_to_legal" model="ir.cron">
    <field name="name">Sinkronisasi Konsolidasi ke Legal Regulation</field>
    <field name="model_id" ref="peraturan_merger.model_peraturan_consolidation"/>
    <field name="state">code</field>
    <field name="code">model._sync_to_legal_regulation()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
  </record>
</odoo>
